<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource
                                    id="Magenest_Movie::config_movie"  title="Movie Section" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magenest_Movie::movie" title="Movie" translate="title" sortOrder="50">
                    <resource id="Magenest_Movie::movies" title="Movies" translate="title" sortOrder="55" />
                    <resource id="Magenest_Movie::directors" title="Directors" translate="title" sortOrder="55" />
                    <resource id="Magenest_Movie::actors" title="Actors" translate="title" sortOrder="60" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>